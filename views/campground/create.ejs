<% layout("layouts/boilerplate") %>

<div class="row">
    <h1 class="text-center">Add new campground</h1>

    <div class="col-6 offset-3">
        <form action="/campground" method = "post" novalidate class="form-validation" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="name" class="form-label">Campground name</label>
                <input type="text" name="title" id="name" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
            </div>
            <div class="mb-3">
                <label for="place" class="form-label">Location</label>
                <input type="text" id="place" name="location" class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for ="description" class="form-label">Description</label>
                <textarea type="text" name="description" id="description" class="form-control" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <input type="file" name="image" id="" multiple>
            <!-- <div class="mb-3"> -->
                <!-- <label for="image" class="form-label">Image url</label> -->
                <!-- <input type="text" name="image" id="image" class="form-control" required > -->
                <!-- <div class="valid-feedback"> -->
                    <!-- Looks good! -->
                <!-- </div> -->
            <!-- </div> -->
            <div class="input-group mb-3">
              <span class="input-group-text" id="basic-addon1">Rs.</span>
              <input type="number" name="price" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="basic-addon1" required>
              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-outline-success">Save</button>
            </div>
        </form>

    </div>
</div>
